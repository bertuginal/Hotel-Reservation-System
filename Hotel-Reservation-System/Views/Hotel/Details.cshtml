@model Hotel_Reservation_System.Models.Hotel

@{
    ViewBag.Title = "Hotel Details";
}

<link href="~/Content/css-folder/hotel/details-h.css" rel="stylesheet" type="text/css" />

<div class="hotel-details-container">
    <div class="hotel-image-container">
        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="hotel-image" />
    </div>
    <div class="maximum-image">
        <p>
            Don't miss out on special offers from
            <img src="~/Content/images/maximum.svg" alt="maximum" class="image-style">!
        </p>
    </div>
    <hr />
    <div class="hotel-info">
        <div class="row">
            <div class="col-md-6">
                <p class="hotel-name">
                    @Html.DisplayFor(model => model.Name)
                </p>
            </div>
            <div class="col-md-6">
                <p class="hotel-rating">
                    @for (var i = 0; i < Model.Rating; i++)
                    {
                        <span>★</span>
                    }
                </p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <p class="hotel-title">
                    @Html.DisplayFor(model => model.Title)
                </p>
            </div>
            <div class="col-md-6">
                <p class="hotel-available-rooms">
                        @Html.DisplayFor(model => model.AvailableRooms)+ Rooms
                </p>
            </div>
        </div>

        <div class="hotel-location">
            <p>📍@Html.DisplayFor(model => model.Location)</p>
        </div>

        <div class="hotel-description">
            <p>@Html.DisplayFor(model => model.Description)</p>
        </div>

        <div class="hotel-price">
            <strong>Price Per Night: </strong>@Html.DisplayFor(model => model.PricePerNight) ₺
        </div>

        <div class="hotel-actions">
            @if (Model.AvailableRooms > 0)
            {
                @Html.ActionLink("Make a Reservation", "Create", "Reservation", new { hotelId = Model.Id }, new { @class = "btn btn-primary" })
            }
            else
            {
                <span class="no-availability">No Available Rooms</span>
            }
        </div>
    </div>
</div>
