@model IEnumerable<Hotel_Reservation_System.Models.Hotel>

@{
    ViewBag.Title = "Hotels";
}
<link href="~/Content/css-folder/hotel/list-h.css" rel="stylesheet" type="text/css" />

<div class="page-header text-center">
    <h1>HOTELS DASHBOARD</h1>
</div>

<div class="dashboard-cards">
    <div class="card card-app">
        <div class="card-content">
            <i class="fa-solid fa-calendar"></i>
            <p>Applications</p>
            <span>41 / 100</span>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: 41%;"></div>
        </div>
    </div>
    <div class="card card-active-users">
        <div class="card-content">
            <i class="fa-solid fa-hotel"></i>
            <p>Total Hotels</p>
            <span>@Model.Count()</span>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: 4%;"></div>
        </div>
    </div>
    <div class="card card-transactions">
        <div class="card-content">
            <i class="fa-solid fa-arrows-alt"></i>
            <p>Transactions</p>
            <span>1</span>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: 10%;"></div>
        </div>
    </div>
    <div class="card card-channels">
        <div class="card-content">
            <i class="fa-solid fa-globe"></i>
            <p>Channels</p>
            <span>9</span>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: 90%;"></div>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered hotel-table">
    <thead class="table-header">
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Name</th>
            <th>Rating</th>
            <th>Rooms</th>
            <th>Price (₺)</th>
            <th>Hotel Settings</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @count
                </td>
                <td>
                    <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" class="table-image" />
                </td>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                </td>
                <td>
                    ★@Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableRooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerNight)
                </td>
                <td>
                    <div class="button-group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>
