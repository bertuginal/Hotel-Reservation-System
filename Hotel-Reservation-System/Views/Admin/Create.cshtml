@model Hotel_Reservation_System.Models.Admin

@{
    ViewBag.Title = "Create Admin";
}

<link href="~/Content/css-folder/account/admin/create-add.css" rel="stylesheet" type="text/css" />


@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()



    <h2>ROOMIFY ADMIN CREATE PANEL</h2>
    <h4>Please fill in the information below to add a new admin!</h4>
    <hr />
    <h6>* are required areas!</h6>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Please put '0' in front." })
            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.LabelFor(model => model.Password, new { @class = "control-label" })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.Label("Confirm Password*", new { @class = "control-label" })
            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
            @if (ViewBag.PasswordMismatch != null)
            {
                <span class="text-danger">@ViewBag.PasswordMismatch</span>
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Create" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>

}
