@model IEnumerable<Hotel_Reservation_System.Models.Admin>

@{
    ViewBag.Title = "Admin List";
}

<h2>ADMIN LIST</h2>
<hr />

@Html.ActionLink("Create New Admin", "Create", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Create New Customer", "Create", "Customer", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Create New Hotel", "Create", "Hotel", null, new { @class = "btn btn-primary" })

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CreatedDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => admin.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => admin.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => admin.Email)
                </td>
                <td>@admin.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = admin.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = admin.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = admin.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>