@model Hotel_Reservation_System.Models.Customer

@{
    ViewBag.Title = "Delete Customer";
}

<link href="~/Content/css-folder/account/customer/delete.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Delete", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="delete-card">
        <h2>CUSTOMER DELETE</h2>
        <h4>Are you sure you want to delete the customer named "@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)"?</h4>
        <hr />

        <div class="card">
            <div class="card-content">
                <div class="card-item">
                    <div class="label-box">
                        <strong>First Name:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.FirstName)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Last Name:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.LastName)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Email:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Email)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Password:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Password)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Phone Number:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Phone)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Address:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Address)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Last Edited Date:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Model.EditedDate</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}