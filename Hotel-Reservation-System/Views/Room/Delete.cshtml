@model Hotel_Reservation_System.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<link href="~/Content/css-folder/room/delete-r.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Delete", "Room", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    @Html.AntiForgeryToken()

    <div class="delete-card">
        <h2>ROOM DELETE</h2>
        <h4>Are you want to delete this room belonging to "@Model.Hotel.Name"?</h4>
        <hr />
        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="room-image" />
        <div class="card">
            <div class="card-content">

                <div class="card-item">
                    <div class="label-box">
                        <strong>NAME:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Name)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>TYPE:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Type)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>NUMBER OF ROOMS:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.NumberOfRooms) Rooms</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>CAPACITY:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Capacity) Guests</span>
                    </div>
                </div>


                <div class="card-item">
                    <div class="label-box">
                        <strong>PRICE PER NIGHT:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.PricePerNight) ₺</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="value-box">
                        <p class="description-text"><strong>DESCRIPTION</strong></p>
                        <span>@Html.DisplayFor(model => model.Description)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
}
