@model Hotel_Reservation_System.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<link href="~/Content/css-folder/room/delete-ro.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Delete", "Room", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    @Html.AntiForgeryToken()

<div class="delete-card">

        <div class="delete-action">
            <div class="line"></div>
            <div class="icon-container">
                <i class="fa-solid fa-trash-can"></i>
            </div>
            <div class="line"></div>
        </div>

        <h2>Delete Room?</h2>
        <h4>Are you want to delete this room belonging to "@Model.Hotel.Name"?</h4>

        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="room-image" />
        <div class="card">
            <div class="card-content">

                <div class="card-item">
                    <div class="label-box">
                        <strong>Room Name:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Name)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Type:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Type)</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Number Of Rooms:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.NumberOfRooms) Rooms</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Max. Capacity:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.Capacity) Guests</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="label-box">
                        <strong>Square Meters:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.SquareMeters) m²</span>
                    </div>
                </div>


                <div class="card-item">
                    <div class="label-box">
                        <strong>Price Per Night:</strong>
                    </div>
                    <div class="value-box">
                        <span>@Html.DisplayFor(model => model.PricePerNight) ₺</span>
                    </div>
                </div>

                <div class="card-item">
                    <div class="value-box">
                        <p class="description-text"><strong>Description</strong></p>
                        <span>@Html.DisplayFor(model => model.Description)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Room")" class="btn btn-cancel">Cancel</a>
        </div>
    </div>
    }
