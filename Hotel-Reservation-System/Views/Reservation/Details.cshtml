@model Hotel_Reservation_System.Models.Reservation
@using Hotel_Reservation_System.Models

@{
    ViewBag.Title = "Reservation Details";
}

<link href="~/Content/css-folder/reservation/details-rr.css" rel="stylesheet" type="text/css" />

<div class="reservation-details-container">
    <div class="actions">
        <a href="@Url.Action("Index", "Reservation")" class="btn btn-back"><i class="fa-solid fa-arrow-left-long"></i> Back to Reservations</a>
    </div>
    <div class="header">

        <div class="detail-action">
            <div class="line"></div>
            <div class="icon-container">
                <i class="fa-solid fa-info"></i>
            </div>
            <div class="line"></div>
        </div>

        <h2>HOTEL RESERVATION DETAILS</h2>
        <p>Review your reservation information below</p>
    </div>

    <div class="room-image">
        <img src="@Url.Content(Model.Room.ImageUrl)" alt="@Model.Room.Name" class="image-thumbnail" />
    </div>

    <div class="card-header">
        <h3>@Model.Room.Name</h3>
        <p class="room-type">@Model.Room.Type</p>
    </div>

    <div class="details-card">

        <div class="card-content">

            <div class="info-section">
                <div class="info-item">
                    <strong>Hotel Name:</strong>
                    <span>@Model.Room.Hotel.Name</span>
                </div>

                <div class="info-item">
                    <strong>Customer:</strong>
                    <span>@Model.Customer.FirstName @Model.Customer.LastName</span>
                </div>
            </div>

            <div class="date-section">
                <div class="date-item">
                    <strong>Check-In Date:</strong>
                    <span>@Model.CheckInDate.ToString("dd MMMM yyyy")</span>
                </div>

                <div class="date-item">
                    <strong>Check-Out Date:</strong>
                    <span>@Model.CheckOutDate.ToString("dd MMMM yyyy")</span>
                </div>
            </div>

            <div class="info-section">
                <div class="info-item">
                    <strong>Guests:</strong>
                    <span>@Model.NumberOfGuests</span>
                </div>

                <div class="info-item">
                    <strong>Total Price:</strong>
                    <span class="total-price">@(Model.Room.PricePerNight * Model.NumberOfGuests * (decimal)(Model.CheckOutDate - Model.CheckInDate).TotalDays) ₺</span>
                </div>

                <div class="info-item status">
                    <strong>Status:</strong>
                    <span class="status-label @(Model.Status == ReservationStatus.Confirmed ? "status-confirmed" : Model.Status == ReservationStatus.Cancelled ? "status-cancelled" : "status-pending")">
                        @Model.Status
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
